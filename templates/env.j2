APP_URL=https://{{ hostname }}
APP_ENV={{ rails_env }}
# DB
DB_HOST={{ db_hostname }}
DB_PORT={{ db_port }}
DB_DATABASE="{{ db_database }}"
DB_USERNAME="{{ db_username }}"
DB_PASSWORD="{{ db_password }}"
DB_ENABLE_CLEARTEXT_PLUGIN=true
DB_SSL_CA_FILE="{{ db_ssl_ca_file }}"
# Shibboleth
SHIB_METADATA_URL="{{ shib_metadata_url }}"
SHIB_DID="{{ shib_did }}"
SHIB_IS_GUEST="{{ shib_is_guest }}"
SHIB_ENTITY_ID="{{ shib_entity_id }}"
SHIB_ASSERTION_CONSUMER_URL="${APP_URL}/auth/saml/callback"
SHIB_IDP_SSO="{{ shib_idp_sso }}"
SHIB_IDP_SLO="{{ shib_idp_slo }}"
SHIB_X509_CERT="{{ shib_x509_cert | replace('\\n', '\n')}}"
SHIB_PRIVATE_KEY="{{ shib_private_key | replace('\\n', '\n') }}"


RAILS_SECRET="{{ rails_secret }}"
SENTRY_DSN={{ sentry_dsn }}
